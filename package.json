{
	"name": "home-assistant-plus",
	"description": "Home Assistant Plus is a microservice to connect to Home Assistant and other services and expose summary of the data.",
	"type": "module",
	"version": "1.0.0",
	"private": true,
	"license": "MIT",
	"author": {
		"name": "Guilherme da Silva Benevides",
		"email": "git@gui.dev.br",
		"url": "https://github.com/gsbenevides2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gsbenevides2/home-assistant-plus"
	},
	"scripts": {
		"start": "bun src/server.ts",
		"dev": "bun --watch src/server.ts",
		"lint": "bunx --bun biome check --write",
		"swagger:build": "cd node_modules/@elysiajs/swagger && bun install && bun run build || true && rm -rf node_modules && cd ../../..",
		"prepare": "husky",
		"generate:clients": "bun run src/backend/clients/updateClientTypes.ts"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.60.0",
		"@elysiajs/cors": "^1.3.3",
		"@elysiajs/swagger": "github:gsbenevides2/elysia-swagger",
		"@google-cloud/speech": "^7.2.0",
		"@google-cloud/storage": "^7.17.0",
		"@modelcontextprotocol/sdk": "^1.16.0",
		"@types/sharp": "^0.32.0",
		"@web-bee-ru/openapi-axios": "^0.0.6",
		"axios": "^1.11.0",
		"elysia": "latest",
		"mqtt": "^5.14.0",
		"sharp": "^0.34.3",
		"tmp": "^0.2.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/tmp": "^0.2.6",
		"bun-types": "latest",
		"husky": "^9.1.7",
		"openapi-typescript": "^7.9.1"
	}
}
